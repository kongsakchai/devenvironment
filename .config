#!/bin/bash

# Scripts
source $WORKSPACE/workspaces/.scripts/workspaces.sh

# Executable
export PATH=$PATH:$WORKSPACE/workspaces/.scripts/exec
export PATH=$PATH:$WORKSPACE/workspaces/.scripts/podman # Use docker command with podman

# Aliases
alias note="vim $WORKSPACE/brains/note.md"         # Open note file
alias wsconfig="vim $WORKSPACE/workspaces/.config" # Open workspace config
alias wslist="cat $WORKSPACE/workspaces/.list"  # List workspaces
